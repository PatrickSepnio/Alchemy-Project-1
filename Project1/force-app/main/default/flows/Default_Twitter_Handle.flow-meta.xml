<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <description>Set a default Twitter Handle</description>
    <interviewLabel>Default Twitter Handle {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Default Twitter Handle</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Update User record if Twitter Handle is not set.</description>
        <name>Default_Twitter_Handle</name>
        <label>Default Twitter Handle</label>
        <locationX>176</locationX>
        <locationY>311</locationY>
        <inputAssignments>
            <field>Twitter_Handle__c</field>
            <value>
                <stringValue>salesforceorg</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Default_Twitter_Handle</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Twitter_Handle__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Contact</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
